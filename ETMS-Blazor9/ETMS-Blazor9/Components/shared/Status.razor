

<div class="col-xl-3 col-lg-6 ">
    <div class="card shadow text-white bg-@colour">
        <div class="card-header">
            <div class="row">
                <div class="col-3">
                    <i class="fas fa-@type fa-4x"></i>
                </div>
                <div class="col-9 text-end">
                    <h1 class="display-4">@number</h1>
                </div>
            </div>
            <div class="row" style="min-height: 48px;">
                <div class="col-12">
                    <small>@comments</small>
                </div>
            </div>
        </div>

        <div class="card-footer text-white bg-secondary">
        <a href="@linkto" class="panel-url text-white ">

                <span class="float-start"><strong>View Details</strong></span>

                <span class="float-end">
                    <i class="fa fa-arrow-circle-right"></i>
                </span>

                <span class="clearfix"></span>
        </a>
        </div>
    </div>
</div>



